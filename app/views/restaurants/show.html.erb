<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

    <h1><%= @restaurant.name %></h1>
      <hr>
      <p> Address: <%= @restaurant.address %> </p>
      <hr>
      <p> Phone: <%= @restaurant.phone_number %> </p>
      <hr>
      <p> Category: <%= @restaurant.category %> </p>
      <hr>
    <h4>Reviews: </h4>

      <% @reviews.each do |review| %>
        
        <li> "<%= review.content %>" <i class="fas fa-star"></i> <%= review.rating %></li>
      
      <% end %>

      <br><br>
     
      <%= link_to new_restaurant_review_path(@restaurant) do%>
        <i class ="fa fa-comment"></i><p>Add a review</p>        
      <% end  %>

    </div>
  </div>
      <%= link_to restaurants_path do%>
        <i class ="fas fa-undo"></i><p>Home</p>      
      <% end  %>
</div>